{
  "manifest_version": 2,
  "name": "Mouse Touch Extension",
  "version": "0.0.1",
  "description": "Magical extension that gives toy magic of touch on non-touch screens.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_title": "Mouse Touch (click to toggle)"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"],
  "short_name": "Mouse Touch"
}
